{  
   "class":"ADC",
   "schemaVersion":"3.0.0",
   "id":"urn:uuid:33045210-3ab8-4636-9b2a-c98d22ab915e",
   "label":"HTTPS",
   "remark":"Wildcard HTTPS Virtual with URI Routing and Service Discovery",
   "tenant":{  
      "class":"Tenant",
      "https_virtual":{  
         "class":"Application",
         "template":"https",
         "serviceMain":{  
            "class":"Service_HTTPS",
            "virtualAddresses":[  
               "0.0.0.0"
            ],
            "snat":"auto",
            "pool":"pool_blue",
            "profileTCP":{  
               "ingress":{  
                  "use":"TCP_Profile"
               },
               "egress":"wan"
            },
            "serverTLS":{  
               "bigip":"/Common/example-clientssl-profile"
            },
            "redirect80": false,
            "persistenceMethods":[  

            ],
            "profileHTTP":{  
               "use":"HTTP_Profile"
            },
            "policyEndpoint":"forward_policy"
         },
         "pool_blue":{  
            "class":"Pool",
            "monitors":[  
               "http"
            ],
            "members":[  
               {  
                  "servicePort":80,
                  "addressDiscovery":"aws",
                  "updateInterval":5,
                  "tagKey":"f5demoapp",
                  "tagValue":"f5-demo-app-0.0.1",
                  "addressRealm":"private",
                  "region":"us-east-1"
               }
            ]
         },
         "pool_green":{  
            "class":"Pool",
            "monitors":[  
               "http"
            ],
            "members":[  
               {  
                  "servicePort":80,
                  "addressDiscovery":"aws",
                  "updateInterval":5,
                  "tagKey":"f5demoapp",
                  "tagValue":"f5-demo-app-0.0.2",
                  "addressRealm":"private",
                  "region":"us-east-1"
               }
            ]
         },
         "HTTP_Profile":{  
            "class":"HTTP_Profile",
            "xForwardedFor":true
         },
         "TCP_Profile":{  
            "class":"TCP_Profile",
            "idleTimeout":60
         },
         "forward_policy":{  
            "class":"Endpoint_Policy",
            "rules":[  
               {  
                  "name":"uri_1",
                  "conditions":[  
                     {  
                        "type":"httpUri",
                        "path":{  
                           "operand":"starts-with",
                           "values":[  
                              "/static"
                           ]
                        }
                     }
                  ],
                  "actions":[  
                     {  
                        "type":"forward",
                        "event":"request",
                        "select":{  
                           "pool":{  
                              "use":"pool_blue"
                           }
                        }
                     }
                  ]
               },
               {  
                  "name":"uri_2",
                  "conditions":[  
                     {  
                        "type":"httpUri",
                        "path":{  
                           "operand":"starts-with",
                           "values":[  
                              "/api"
                           ]
                        }
                     }
                  ],
                  "actions":[  
                     {  
                        "type":"forward",
                        "event":"request",
                        "select":{  
                           "pool":{  
                              "use":"pool_green"
                           }
                        }
                     }
                  ]
               },
               {  
                  "name":"default",
                  "actions":[  
                     {  
                        "type":"forward",
                        "event":"request",
                        "select":{  
                           "pool":{  
                              "use":"pool_blue"
                           }
                        }
                     }
                  ]
               }
            ]
         }
      }
   }
}